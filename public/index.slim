      function sync() {
        $('.section-claims-image, .section-claims-copy-wrapper').syncHeight({ 'updateOnResize': true });
        unSyncIfMobile();
      }

      function unSyncIfMobile() {
        if($(window).width() < 650) { $('.section-claims-image, .section-claims-copy-wrapper').unSyncHeight(); }
      }

      if (navigator.appName == "Microsoft Internet Explorer") {
          $(window).load(function () { 
            sync(); 
            $(window).resize(function(){ unSyncIfMobile(); });
          });
      }
      else {
          window.addEventListener('load', function () { 
            sync();
            $(window).resize(function(){ unSyncIfMobile(); });
          }, false);
      }

      $(document).ready(function(){

          $("#subscribe-form").submit(function() {
              var email = $("#subscribe-email").val();
              if (email == "") $("#subscribe-form span.return").html("Pleaes enter an email.").addClass("return-error");
              $.get($("#subscribe-form").attr("action"), $("#subscribe-email").serialize(), 
                function(data) {

                  console.log(data);
                  if (data['code'] != null ) {
                    if (data['code'] == 214) 
                      $("#subscribe-form span.return").html("You've already subscribed!").addClass("return-error");
                    else if (data['code'] == 502)
                      $("#subscribe-form span.return").html("Invalid email address.").addClass("return-error");
                    else 
                      $("#subscribe-form span.return").html(data['error']).addClass("return-error");
                  }
                  else {
                    $("#subscribe-form span.return").html("Subscribed!").addClass("return-success");
                  }

                  $("#subscribe-email").val("");

                }, 
                "json" );
                return false;
          });

      });

