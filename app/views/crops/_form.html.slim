= form_for @crop do |f|
  - if @crop.errors.any?
    #error_explanation
      h2 = "#{pluralize(@crop.errors.count, "error")} prohibited this crop from being saved:"
      ul
        - @crop.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions = f.submit 'Save'
