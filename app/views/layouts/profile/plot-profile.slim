- content_for :profile_name do
  a href=plot_url(@plot)
    h1
      = @plot.name.presence || "Plot Name"

- content_for :profile_location do
  span.icon.location
  - if @plot.city.present? && @plot.state.present?
      = @plot.city + ", " + @plot.state
  - elsif @plot.city.present?
      = @plot.city
  / - else
      / a href=edit_user_registration_url Add your city!

- content_for :profile_image do
  - if (user_signed_in? && @plot && current_user.id == @plot.id && params[:action] == 'show')
   	/ a href=edit_user_registration_url
  	= image_tag @plot.avatar(:medium)
  - else
      = image_tag @plot.avatar(:medium)

- content_for :profile_sidebar do
  
  br
  br

  ul.profile-navigation.styled
    li class=('active' if controller.controller_name != 'plots')
      a href=plot_url(@plot) title="Plot Profile"
        span.icon.icon-male
        | Plot Profile

  -if @plot.about
    h5 About #{@plot.name}:
    p #{@plot.about}
  -else
    h5 About #{@plot.name}:
    p #{@plot.name} has no description.
  h5 Name:  
  p= @plot.name
  h5 City:  
  p= @plot.city
  h5 State
  p= @plot.state
  h5 Zip: 
  p= @plot.zip
  h5 About
  p= @plot.about




- content_for :profile_tabs do
  ul.nav.nav-tabs.list-block
    li class=('active' if controller.controller_name == "plots" && controller.action_name == 'show' || controller.controller_name == "plots" && controller.action_name == 'edit' )
      = link_to "ABOUT", plot_path(@plot), remote: false
    li class=('active' if controller.controller_name == 'posts')
      = link_to "NEWS", "#", remote: false
    li class=('active' if controller.controller_name == '')
      = link_to "PEOPLE", "#"
    li class=('active' if controller.controller_name == 'plot_crop_varieties')
      = link_to "CROP", plot_crops_path(@plot.id)


= render template: "layouts/profile/profile"