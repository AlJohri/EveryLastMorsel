- if devise_mapping.recoverable? && controller_name != 'passwords'
    .row: .col-lg-12
		= link_to "Forgot your password?", new_password_path(devise_resource_name)
- if devise_mapping.confirmable? && controller_name != 'confirmations' 
    .row: .col-lg-12
		= link_to "Didn't receive confirmation instructions?", new_confirmation_path(devise_resource_name)
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' 
    .row: .col-lg-12
		= link_to "Didn't receive unlock instructions?", new_unlock_path(devise_resource_name)



